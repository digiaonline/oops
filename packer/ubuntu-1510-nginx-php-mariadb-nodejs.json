{
  "variables": {
    "PACKER_OS_FLAVOUR": "ubuntu",
    "UBUNTU_RELEASE_NAME": "ubuntu-15.10-server-amd64",
    "ATLAS_ORGANIZATION": "nordsoftware",
    "BOX_NAME": "ubuntu-1510-nginx-php-mariadb-nodejs"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install/vmlinuz",
        " auto",
        " console-setup/ask_detect=false",
        " console-setup/layoutcode=us",
        " console-setup/modelcode=pc105",
        " debconf/frontend=noninteractive",
        " debian-installer=en_US",
        " fb=false",
        " initrd=/install/initrd.gz",
        " kbd-chooser/method=us",
        " keyboard-configuration/layout=USA",
        " keyboard-configuration/variant=USA",
        " locale=en_US",
        " netcfg/get_domain=vm",
        " netcfg/get_hostname=vagrant",
        " grub-installer/bootdev=/dev/sda",
        " noapic",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `UBUNTU_RELEASE_NAME` }}/preseed.cfg",
        " -- ",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "headless": false,
      "disk_size": 10140,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Ubuntu_64",
      "http_directory": "preseed",
      "iso_checksum": "86aa35a986eba6e5ad30e3d486d57efe6803ae7ea4859b0216953e9e62871131",
      "iso_checksum_type": "sha256",
      "iso_url": "http://releases.ubuntu.com/15.10/{{ user `UBUNTU_RELEASE_NAME` }}.iso",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "vm_name": "{{ user `BOX_NAME` }}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/update.sh",
        "scripts/sshd.sh",
        "scripts/ansible.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|{{.Vars}} sudo -S -E bash '{{.Path}}'"
        }
      }
    },
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "execute_command": "echo 'vagrant'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/networking.sh",
        "scripts/sudoers.sh",
        "scripts/vagrant.sh",
        "scripts/vmtools.sh"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/nginx-php-mariadb-nodejs.yml",
      "playbook_dir":  "ansible",
      "inventory_file": "ansible/inventory/development",
      "extra_arguments": ["-i", "inventory/development", "--limit", "vagrant", "-v"]
    },
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "execute_command": "echo 'vagrant'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/filesystem.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "only": ["virtualbox-iso"]
      },
      {
        "type": "atlas",
        "only": ["virtualbox-iso"],
        "artifact": "{{ user `ATLAS_ORGANIZATION` }}/{{ user `BOX_NAME` }}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "created_at": "{{timestamp}}"
        }
      }
    ]
  ],
  "push": {
    "name": "{{ user `ATLAS_ORGANIZATION` }}/{{ user `BOX_NAME` }}"
  }
}
