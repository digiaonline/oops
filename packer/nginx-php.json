{
  "variables": {
    "PACKER_OS_FLAVOUR": "ubuntu",
    "UBUNTU_RELEASE_NAME": "ubuntu-14.04.4-server-amd64",
    "ATLAS_ORGANIZATION": "nordsoftware",
    "BOX_NAME": "nginx-php"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=vagrant<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `UBUNTU_RELEASE_NAME` }}/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "headless": false,
      "disk_size": 10140,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Ubuntu_64",
      "http_directory": "preseed",
      "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
      "iso_checksum_type": "sha256",
      "iso_url": "http://releases.ubuntu.com/14.04/{{ user `UBUNTU_RELEASE_NAME` }}.iso",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "vm_name": "{{ user `BOX_NAME` }}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/update.sh",
        "scripts/sshd.sh",
        "scripts/ansible.sh"
      ],
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant'|{{.Vars}} sudo -S -E bash '{{.Path}}'"
        }
      }
    },
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "execute_command": "echo 'vagrant'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/networking.sh",
        "scripts/sudoers.sh",
        "scripts/vagrant.sh",
        "scripts/vmtools.sh"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/nginx-php.yml",
      "playbook_dir":  "ansible",
      "inventory_file": "ansible/inventory/development",
      "extra_arguments": ["-i", "inventory/development", "--limit", "vagrant", "-v"]
    },
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "execute_command": "echo 'vagrant'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/filesystem.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "only": ["virtualbox-iso"]
      },
      {
        "type": "atlas",
        "only": ["virtualbox-iso"],
        "artifact": "{{ user `ATLAS_ORGANIZATION` }}/{{ user `BOX_NAME` }}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "created_at": "{{timestamp}}"
        }
      }
    ]
  ],
  "push": {
    "name": "{{ user `ATLAS_ORGANIZATION` }}/{{ user `BOX_NAME` }}"
  }
}
